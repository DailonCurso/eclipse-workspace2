import java.util.Locale;
import java.util.Scanner;

public class Exemplo01 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		scan.useLocale(Locale.US);
		
		int n1, n2;
		System.out.println("Digite 1 numero:");
		n1 = scan.nextInt();
		
		System.out.println("Digite 1 numero");
		n2 = scan.nextInt();
		
		//Operações Matemáticas
		int soma = n1 + n2;
		System.out.println("A soma dos valores = " + soma);
		
		int sub = n1 - n2;
		System.out.println("A subtração de n1 por n2 = " + sub);
		
		int mult = n1 * n2;
		System.out.println("A multiplicação dos valores = " + mult);
		
		int div = n1 / n2;
		System.out.println("A divisão de n1 por n2 = " + div);
		
		int resto = n1 % n2;
		System.out.println("O resto da divisão de n1 por n2 = " + resto);
		
		double n1Double = n1;
		double n2Double = n2;
		
		double divisaoTotal = n1Double / n2Double;
		System.out.println("Divisão total de n1 por n2 = " + divisaoTotal);
		
		
		scan.close();
	}

}
