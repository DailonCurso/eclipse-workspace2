import java.util.Locale;
import java.util.Scanner;

public class Questao05 {

	public static void main(String[] args) {
		// Ler o valor de um jantar, apresentar a taxa do garçom 10% e também o valor
		
		Scanner scan = new Scanner(System.in);
		Locale.setDefault(Locale.US);
		
		System.out.println("Digite o \"valor do jantar:\" ");
		float value = scan.nextFloat();
		
		float total = value * 1.1f;
		
		System.out.println(String.format("Valor da refeição: %.2f + 10% = %.2f ", value, total));
		
		scan.close();
	}

}
